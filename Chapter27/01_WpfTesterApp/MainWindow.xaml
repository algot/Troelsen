<Window x:Class="_01_WpfTesterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_WpfTesterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="CadetBlue" MouseMove="MainWindow_OnMouseMove">
  <Grid Cursor="" Height="320" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="0*"/>
    </Grid.ColumnDefinitions>
    <Button x:Name="button1" Content="Button" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click">
      <Button.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0, 0.5">
          <GradientStop Color="#FF7488CE" Offset="0" />
          <GradientStop Color="#FFC11E1E" Offset="0.837"/>
        </LinearGradientBrush>
      </Button.Background>
    </Button>
    <Calendar HorizontalAlignment="Left" Margin="163,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="168" Width="179"/>

  </Grid>
</Window>
